<html>
<head>
    <title>OmnApp</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />
    <link rel="stylesheet" href="http://netdna.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.css" />
    <link href="../../css/style.css" rel="stylesheet" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>
<nav class="navbar navbar-inverse navbar-static-top" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <a class="navbar-brand" href="/"><i class="fa fa-cutlery fa-lg" style="color: white;"></i> OmnApp</a>
        </div>
        <ul class="nav navbar-nav">
            <li><a href="/"><i class="fa fa-home"></i> Home</a></li>
            <li><a href="/tracking"><i class="fa fa-pencil-square-o"></i> Tracking</a></li>
            <li><a href="/stats"><i class="fa fa-pie-chart" ></i> Stats</a></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
            <%if(!user) { %>
            <li><a href="/login" ><i class="fa fa-sign-in" ></i> Login</a></li>
            <li><a href="/register"><i class="fa fa-user" ></i> Register</a></li>
            <% }%>
            <%if(user) { %>
            <li><a href="/profile"><i class="fa fa-user" aria-hidden="true"></i>
                    <%=user.username%></a></li>
            <li><a href="/auth/logout"><i class="fa fa-sign-out" ></i> Logout</a></li>
            <% } %>
        </ul>
    </div>
</nav>
<div class="container">
<div class="row">
    <div>
        <%if(success_msg.length > 0) {%>
        <div class="alert alert-success alert-dismissible fade-in" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>
            <%= success_msg%>
        </div>
        <% }%>
        <%if(error_msg.length > 0) {%>
        <div class="alert alert-danger alert-dismissible fade-in" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>
            <%= error_msg%>
        </div>
        <% }%>
        <%if(error.length > 0) {%>
        <div class="alert alert-danger alert-dismissible fade-in" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>
            <%= error%>
        </div>
        <% }%>
    </div>
</div>
</div>