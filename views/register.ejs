<% include ../views/layout.ejs %>

<div class="container text-center">
    <div class="row">
        <div class="jumbotron">
            <h1>Register here</h1>
            <form form action="/auth/register" method="post">
                <div class="form-group">
                    <label for="exampleInputEmail1">Email address</label>
                    <input type="email" class="form-control" name="username" id="exampleInputEmail1" placeholder="Email" required="required">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input type="password" class="form-control" name="password" id="exampleInputPassword1" placeholder="Password" required="required">
                </div>
                <button type="submit" class="btn btn-default">Submit</button>
            </form>

        </div>

    </div>
</div>
</body>
