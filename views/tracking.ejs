<% include ../views/layout.ejs %>
<% var date = new Date();
    var dday = date.getDate()
%>
<div class="container text-center">
    <div class="row">
        <div class="jumbotron">

            <form action="/tracking/search" method="post">
                <div class="form-group">
                    <label for="foodItemSearch">Search for food item</label>
                    <input type="text" class="form-control" name="foodItem" placeholder="Enter food">
                </div>
                <button type="submit" class="btn btn-default">Submit</button>
            </form>
            <% if(lala.length > 0) {%>
            <ul class="list-group">
                <% for(var i = 0; i < lala.length;i++) {%>
                <li class="list-group-item">

                    <%= lala[i].name + ": " %>
                    <%= lala[i].value + " " + dday%>
                </li>
                <% }%>
            </ul>
            <% }%>

            <ul class="pagination pagination-sm">
                <li><a href="#">1</a></li>
                <li><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">4</a></li>
                <li><a href="#">5</a></li>
            </ul>
        </div>

    </div>
</div>
</body>
</html>